@model IList<ShareModel.RealEstatefromCategory>

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

@{
    ViewData["Title"] = "introduce";
}


@if (Model.Count() != 0)
{
    <div class="container">
        <h2>Title</h2>
        <hr />

        @foreach (var product in Model)
        {
            <div class="card" style="width: 60%;">
                <div class="row no-gutters">
                    <div class="col-sm-5">
                        <img class="card-img" src="@product.Image" alt="Card image cap">
                    </div>
                    <div class="col-sm-7">
                        <div class="card-body">
                            <p class="card-title">@product.Title</p>
                            <p class="card-text">@product.Price  <br />    @product.Location</p>
                            <a href="#" class="btn btn-primary">View Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}


else
{
    <div class="row">
        <strong>Không có sản phẩm nào!</strong>
    </div>
}

